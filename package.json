{
  "name": "@drunkcod/tin",
  "type": "module",
  "version": "0.0.1",
  "description": "tobbe's tiny injection library, token based IoC and factory factory thing.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "exports": {
    ".": {
      "import": {
        "default": "./lib/index.js",
        "types": "./lib/index.ts"
      },
      "require": {
        "default": "./lib/cjs/index.js",
        "types": "./lib/index.ts"
      }
    }
  },
  "scripts": {
    "clean": "rimraf lib",
    "compile": "tsc",
    "compile:cjs": "tsc --module commonjs --outdir lib/cjs --declaration false",
    "fixup:cjs": "echo '{\"type\": \"commonjs\"}' > lib/cjs/package.json",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest",
    "build": "npm-run-all clean -p compile compile:cjs -s fixup:cjs --silent"
  },
  "keywords": [
    "IoC",
    "tiny"
  ],
  "author": "Tobbe Gyllebring <tobbe@drunkcod.com>",
  "license": "MIT",
  "devDependencies": {
    "@drunkcod/ts-jest-esm": "^0.0.1",
    "@jest/globals": "^29.7.0",
    "@types/node": "^22.10.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  }
}
